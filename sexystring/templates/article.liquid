<div id="article-page" class="container-wrapper textile">
  <article id="main" class="textile" itemscope itemtype="http://schema.org/Article">
    <header id="article-header">
      <h1 id="page-title" class="article-title" itemprop="name">{{ article.title }}</h1>
      <p class="article-meta">by <span itemprop="author">{{ article.author }}</span> {% if article.tags.size > 0 %}<span class="sep"> | </span>Posted in <span class="article-tags" itemprop="keywords">{% for tag in article.tags %}{% if forloop.last %} and {% else %}{% unless forloop.first %}, {% endunless %}{% endif %}<a class="blogArticleTags" href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% endfor %}</span>{% endif %} <span class="sep">|</span> <time class="article-published" pubdate date="{{ article.published_at | date: "%B %d, %Y" }}"><span itemprop="datePublished">{{ article.published_at | date: "%B %d, %Y" }}</span></time>{% if article.comments_enabled? %}{% if settings.use_disqus %} <span class="sep">|</span> <a title="View Comments" class="article-comments" itemprop="interactionCount" href="#disqus_thread" data-disqus-identifier="{{ article.id }}"></a>{% endif %}{% endif %}</p><!-- article-meta -->
    </header><!-- article -->
    <div id="article-content" itemprop="articleBody">
      <!-- insert here -->
      <!-- FB likes/share -->
